<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Main.Dark.Splash">
        <!--<item name="android:windowBackground">@mipmap/ic_splash</item>-->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Main.Theme">
        <item name="colorPrimary">?attr/app_main_color</item>
        <item name="colorPrimaryDark">?attr/app_main_color</item>
        <item name="colorAccent">?attr/app_main_color</item>
        <item name="app_main_color">@color/app_main_color</item>
    </style>

    <style name="AppTheme.Main.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="app_main_color">@color/main_black</item>
    </style>

</resources>