<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_channel_content_url"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_channel_content_url"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_gradient"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="巴黎浪漫的描述"/>

        <TextView
            android:id="@+id/tv_view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_channel_content_url"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:drawableLeft="@mipmap/ic_online_live_list"
            android:maxLines="1"
            android:padding="4dp"
            android:text="10000"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <RelativeLayout
            android:id="@+id/rl_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_channel_content_url"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/ll_tags"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="巴黎浪漫"/>

            <LinearLayout
                android:id="@+id/ll_tags"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/shape_round_pink"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:text="人气啊"/>

                <TextView
                    android:id="@+id/tv_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/shape_round_yellow"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:text="经典啊"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/selector_play"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>