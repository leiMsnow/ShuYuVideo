<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="167dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardCornerRadius="2dp"
                                    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_channel_content_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_content_bottom"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_content_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_channel_content_url"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:background="@drawable/shape_gradient"
            android:maxLines="1"
            android:text="巴黎浪漫的描述"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/rl_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_label1"
                android:ellipsize="end"
                android:maxLength="5"
                android:maxLines="1"
                android:text="巴黎浪漫"/>

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_content_title"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/tv_label2"
                android:background="@drawable/shape_round_pink"
                android:maxLength="2"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="人气"
                android:textColor="@color/white"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_content_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_round_yellow"
                android:maxLength="2"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="经典"
                android:textColor="@color/white"
                android:textSize="10sp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="36dp"
            android:src="@drawable/selector_play"
            android:layout_marginBottom="30dp"
            android:layout_height="36dp"
            android:layout_above="@+id/tv_content_desc"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_play"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>