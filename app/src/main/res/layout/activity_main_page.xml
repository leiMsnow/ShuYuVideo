<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/in_toolbar"
        layout="@layout/include_toolbar" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom_menu"
        android:layout_below="@+id/in_toolbar"/>

    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <com.shuyu.core.widget.ChangeColorView
            android:id="@+id/ccv_main"
            style="@style/MainMenuStyle"
            app:changeColor="@color/main_pink"
            app:changeIcon="@mipmap/ic_nav_main"
            app:changeText="@string/nav_main"
            app:changeTextSize="12sp"
            app:defaultColor="@color/white"/>

        <com.shuyu.core.widget.ChangeColorView
            android:id="@+id/ccv_vip"
            style="@style/MainMenuStyle"
            app:changeColor="@color/main_pink"
            app:changeIcon="@mipmap/ic_nav_vip"
            app:changeText="@string/nav_vip"
            app:changeTextSize="12sp"
            app:defaultColor="@color/white"/>

        <com.shuyu.core.widget.ChangeColorView
            android:id="@+id/ccv_private"
            style="@style/MainMenuStyle"
            app:changeColor="@color/main_pink"
            app:changeIcon="@mipmap/ic_nav_private"
            app:changeText="@string/nav_recommend"
            app:changeTextSize="12sp"
            app:defaultColor="@color/white"/>

        <com.shuyu.core.widget.ChangeColorView
            android:id="@+id/ccv_user"
            style="@style/MainMenuStyle"
            app:changeColor="@color/main_pink"
            app:changeIcon="@mipmap/ic_nav_user"
            app:changeText="@string/nav_me"
            app:changeTextSize="12sp"
            app:defaultColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
