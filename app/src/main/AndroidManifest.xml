<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shuyu.video">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Main.Theme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.Main.Dark.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.WebViewActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".activity.VideoDetailsActivity"
            android:theme="@style/AppTheme.Main.Dark"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/search">
        </activity>
        <activity
            android:name=".activity.PictureDetailsActivity"
            android:label="详情">
        </activity>
        <activity android:name=".activity.PictureShowActivity">
        </activity>
    </application>

</manifest>