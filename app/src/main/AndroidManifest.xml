<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shuyu.video">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Main.Theme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.Main.Dark.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activity.WebViewActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".activity.VideoDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.Main.Dark">
        </activity>
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/search">
        </activity>
        <activity
            android:name=".activity.PictureDetailsActivity"
            android:label="@string/details">
        </activity>
        <activity android:name=".activity.PictureShowActivity">
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/about">
        </activity>
        <activity
            android:name=".activity.FeedbackActivity"
            android:label="@string/feedback">
        </activity>
        <activity
            android:name=".activity.ServiceActivity"
            android:label="@string/service">
        </activity>

        <activity android:name=".activity.PayMainActivity"/>

        <activity
            android:name="c.b.a.A"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="c.b.a.B"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />

        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

    </application>

</manifest>